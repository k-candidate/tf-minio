services:
  minio:
    container_name: minio
    image: minio/minio:RELEASE.2025-02-18T16-25-55Z-cpuv1
    command: server /data --console-address ":9001"
    ports:
      - "9000:9000"
      - "9001:9001"
    env_file:
      - /etc/minio/minio.env
    volumes:
      - /mnt/data/minio:/data
      - /etc/minio/minio.env:/etc/config.env
    restart: unless-stopped
